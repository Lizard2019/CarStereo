<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="cs371.carstereo.MainActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:weightSum="1">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="314dp"
            android:background="#7c7c7c">
            android:

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="75dp">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="75dp"
                    android:layout_gravity="center_horizontal"
                    android:weightSum="1">

                    <Space
                        android:layout_width="200dp"
                        android:layout_height="match_parent" />

                    <Button
                        android:layout_width="450dp"
                        android:layout_height="25dp"
                        android:text="New Button"
                        android:id="@+id/button"
                        android:layout_marginTop="25dp"
                        android:background="#000000" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="75dp"
                android:weightSum="1">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <Space
                        android:layout_width="286dp"
                        android:layout_height="75dp" />

                    <ImageButton
                        android:layout_width="60dp"
                        android:layout_height="75dp"
                        android:id="@+id/imageButton"
                        android:src="@mipmap/ic_launcher_rewind" />

                    <ImageButton
                        android:layout_width="60dp"
                        android:layout_height="75dp"
                        android:id="@+id/imageButton2"
                        android:src="@mipmap/ic_launcher_pause" />

                    <ImageButton
                        android:layout_width="60dp"
                        android:layout_height="75dp"
                        android:id="@+id/imageButton3"
                        android:src="@mipmap/ic_launcher_play" />

                    <ImageButton
                        android:layout_width="60dp"
                        android:layout_height="75dp"
                        android:id="@+id/imageButton4"
                        android:src="@mipmap/ic_launcher_stop" />

                    <ImageButton
                        android:layout_width="60dp"
                        android:layout_height="75dp"
                        android:id="@+id/imageButton5"
                        android:src="@mipmap/ic_launcher_fForward" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:background="#d4d4d4">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="200dp">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:text="Large Text"
                        android:id="@+id/textView" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
